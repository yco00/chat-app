<div class="message">
  <div class="message_top">
    <div class="contributor">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>

    </div>
    <div class="date">
      <!-- 投稿した時刻を出力する -->
      <%= l message.created_at %>
    </div>
  </div>
  <div class="essage_main">
    <div class="message-content">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
    </div>

    <%=image_tag message.image.variant(resize: '100x100'), class: 'message-image' if message.image.attached?%>
  </div>
</div>  
  